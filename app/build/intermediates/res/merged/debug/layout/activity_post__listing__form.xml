<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_post_listing_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="64dp"
    tools:context="com.example.soh.cz2006testapp.Post_Listing_Form">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/image_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/add_button" />

            <Spinner
                android:id="@+id/spinner_sell_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_select"
                android:entries="@array/sell_rent"/>

            <EditText
                android:id="@+id/edit_text_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spinner_sell_rent"
                android:layout_margin="10dp"
                android:background="@drawable/inputtextbox"
                android:ems="10"
                android:hint="@string/All_Post_Title"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_text_post_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edit_text_post_title"
                android:layout_margin="10dp"
                android:background="@drawable/inputtextbox"
                android:ems="10"
                android:hint="@string/Post_Listing_Form_Address"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/edit_text_post_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/edit_text_post_add"
                android:layout_margin="10dp"
                android:background="@drawable/inputtextbox"
                android:hint="@string/Post_Listing_Form_Price"
                android:inputType="number" />

            <TextView
                android:id="@+id/text_view_district"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/All_District"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/edit_text_post_price"
                android:layout_alignTop="@+id/spinner_district"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/spinner_district"
                android:layout_below="@+id/edit_text_post_price"
                android:entries="@array/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp" />

            <TextView
                android:id="@+id/text_view_no_of_room"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/Post_Listing_Form_No._of_Room"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/text_view_district"
                android:layout_alignTop="@+id/spinner_room"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/spinner_room"
                android:layout_below="@+id/text_view_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/rooms"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp" />

            <EditText
                android:id="@+id/edit_text_post_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_room"
                android:layout_margin="10dp"
                android:background="@drawable/inputtextbox"
                android:hint="@string/Post_Listing_Form_Size"
                android:inputType="number" />

            <TextView
                android:id="@+id/text_view_tenure"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/Post_Listing_Form_Tenure"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/edit_text_post_size"
                android:layout_alignTop="@+id/spinner_tenure"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/spinner_tenure"
                android:layout_below="@+id/edit_text_post_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/tenure"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="150dp" />

            <RelativeLayout
                android:id="@+id/rental_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_tenure"
                android:padding="10dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/edit_text_post_amenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputtextbox"
                    android:hint="@string/Post_Listing_Form_Amenities"
                    android:inputType="textMultiLine"
                    android:padding="10dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/rental_form"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:hint="@string/Submit"
                android:background="@drawable/buttons"
                android:textColorHint="@color/White"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_post_listing_form"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/logged_in_navigation" >

    </android.support.design.widget.NavigationView>

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v4.widget.DrawerLayout>